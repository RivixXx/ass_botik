// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Модель для хранения сессий Telegram-бота
model TelegramSession {
  id        String   @id // Telegram user ID или chat ID
  data      String   // JSON данные сессии
  updatedAt DateTime @default(now()) @updatedAt
  createdAt DateTime @default(now())
}

model Employee {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  department   String
  position     String?      
  email        String   @unique
  phone        String?
  birthdayDay  Int?        
  birthdayMonth Int?       
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
