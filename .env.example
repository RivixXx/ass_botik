# Telegram Bot Token
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.2
SYSTEM_PROMPT=Ты — полезный корпоративный ассистент компании Навикон. Отвечай кратко, вежливо, на русском языке.

# Logging
LOG_LEVEL=info

# Security
# Telegram user IDs администраторов через запятую
# Узнать свой user ID можно через бота @userinfobot в Telegram
ADMIN_USER_IDS=123456789,987654321

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Sessions
MAX_HISTORY_MESSAGES=10
SESSION_CLEANUP_INTERVAL=3600000

# Cache
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# Database
DATABASE_URL=file:./prisma/dev.db

